{
  "compilerOptions": {
    "rootDir": "internal/web/view",
    "outDir": "internal/web/view",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
     "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": ["internal/web/view/**/*.ts"],
  "exclude": ["**/*.js"]
}
